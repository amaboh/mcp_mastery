# Market to analyze (e.g., 'us', 'global')
MARKET_SCOPE=us
# Minimum market cap for analysis (in millions)
MIN_MARKET_CAP=100
# Stock exchange to focus on (e.g., 'NYSE', 'NASDAQ', 'ALL')
STOCK_EXCHANGE=ALL